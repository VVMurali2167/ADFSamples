{
	"name": "CalcSalesByDept",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "LogicAppSource",
						"type": "DatasetReference"
					},
					"name": "Department"
				},
				{
					"dataset": {
						"referenceName": "LogicAppSalesSource",
						"type": "DatasetReference"
					},
					"name": "Sales"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "LogicAppOutput",
						"type": "DatasetReference"
					},
					"name": "SalesByDeptResults"
				}
			],
			"transformations": [
				{
					"name": "SalesDeptJoin"
				},
				{
					"name": "SalesByDept"
				}
			],
			"scriptLines": [
				"source(output(",
				"          DEPTID as string,",
				"          DEPTNAME as string,",
				"          DEPTLOC as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 10,",
				"     ignoreNoFilesFound: false) ~> Department",
				"source(output(",
				"          SID as string,",
				"          DEPTID as string,",
				"          SNAME as string,",
				"          SREGION as string,",
				"          SDATE as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Sales",
				"Department, Sales join(Department@DEPTID == Sales@DEPTID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> SalesDeptJoin",
				"SalesDeptJoin aggregate(groupBy(SID,",
				"          Sales@DEPTID),",
				"     COUNT = count()) ~> SalesByDept",
				"SalesByDept sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SalesByDeptResults"
			]
		}
	}
}